mutate(
significance_maxmin = ifelse(!is.na(p_value_maxmin) & p_value_maxmin >= 0.05, "non-sig", "sig"),
direction_maxmin = ifelse(!is.na(tau_maxmin) & tau_maxmin > 0, "positive",
ifelse(!is.na(tau_maxmin) & tau_maxmin < 0, "negative", "no trend"))
)
return(results)
}
